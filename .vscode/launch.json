    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run dev",
            "name": "NPM Run Dev",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Docker Attach",
            "skipFiles": ["<node_internals>/**"],
            "address": "localhost",
            "port": 9229,
            "localRoot": "${workspaceFolder}/app",
            "remoteRoot": "/usr/src/app",
            "restart": true
        }
    ]
}
